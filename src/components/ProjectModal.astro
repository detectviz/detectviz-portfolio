---
import TechItem from "./ui/TechItem.astro";
import { Carousel } from "./ui/Carousel.jsx";
import type { Project } from '../types/project';

interface Props extends Project {}

const {
  id,
  images,
  title,
  content,
  technologies,
  repo,
  site,
  links,
  period,
} = Astro.props;

const base = import.meta.env.BASE_URL;
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
const imagePath = `${cleanBase}/images/projects/${id}`;
---

<div
    data-visible="false"
    class="modal fixed hidden data-[visible=true]:flex justify-center top-0 left-0 w-screen h-full bg-black/60 z-50 backdrop-blur-sm overflow-y-scroll lg:items-center"
    id={`modal-${id}`}
    role="dialog"
    aria-modal="true"
>
    <div
        class="my-1 relative bg-white dark:bg-neutral-900 flex flex-col h-fit w-[95%] max-w-[600px] rounded-2xl shadow-2xl overflow-hidden lg:grid lg:grid-cols-[auto_23rem] lg:max-h-[1024px] lg:max-w-[85%]"
        onclick="event.stopPropagation()"
    >
        <div class="bg-black flex items-center justify-center">
            <Carousel client:visible images={images} path={imagePath} />
        </div>
        
        <article class="flex flex-col h-full lg:pt-12 lg:pb-8 overflow-hidden">
            <div class="flex-1 overflow-y-auto px-6 pt-6 lg:px-8 lg:pt-0 mb-8">
                <h2 class="font-heading font-bold text-2xl sm:text-3xl text-secondary dark:text-white mb-4 leading-tight whitespace-pre-wrap">
                    {title}
                </h2>
                
                {period && (
                    <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                        <span class="font-medium">{period}</span>
                    </div>
                )}
                
                <div class="flex flex-wrap gap-2 mb-4">
                    {repo && (
                        <a
                            href={repo}
                            class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-secondary dark:text-white bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" /><path d="M9 18c-4.51 2-5-2-7-2" /></svg>
                            GitHub
                        </a>
                    )}
                    {site && (
                        <a
                            href={site}
                            class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-secondary dark:text-white bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 3 21 3 21 9" /><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" /><line x1="10" y1="14" x2="21" y2="3" /></svg>
                            Visit Site
                        </a>
                    )}
                    {links && links.map(link => (
                        <a
                            href={link.url}
                            class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-secondary dark:text-white bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                            {link.name}
                        </a>
                    ))}
                </div>

                <div class="prose prose-sm dark:prose-invert max-w-none">
                    <p class="whitespace-pre-line font-light tracking-wide text-justify text-gray-500 dark:text-white/70">{content}</p>
                </div>
            </div>

            <div class="px-6 pb-6 lg:px-8 lg:pb-0 flex-shrink-0">
                <h3 class="font-bold text-secondary dark:text-primary mb-3 text-sm uppercase tracking-wider">
                    Technologies
                </h3>
                <ul class="flex flex-wrap gap-2">
                    {technologies.map((technology) => (
                        <TechItem
                            name={technology.name}
                            icon={technology.icon}
                        />
                    ))}
                </ul>
            </div>
        </article>

        <button
            class="absolute top-4 right-4 p-2 text-secondary dark:text-white/70 hover:text-primary dark:hover:text-white transition-colors close-modal-btn z-10"
            data-target={`modal-${id}`}
            aria-label="Close modal"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
    </div>
</div>
