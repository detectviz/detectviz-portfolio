---
interface Props {
  name: string;
  icon?: string;
}

const { name, icon } = Astro.props;
const iconName = icon || name.toLowerCase().replace(/\s+/g, '-');
const base = import.meta.env.BASE_URL;
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
const iconUrl = `${cleanBase}/icons/${iconName}.svg`;
---

<li class="flex items-center gap-2 text-xs font-medium px-2.5 py-1 rounded-full bg-gray-100 dark:bg-neutral-800 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-700 transition-colors hover:bg-gray-200 dark:hover:bg-neutral-700">
  <img
    class="h-3.5 w-3.5"
    src={iconUrl}
    alt=""
    loading="lazy"
  />
  <span>{name}</span>
</li>
